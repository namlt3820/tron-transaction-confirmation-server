{
  "name": "@brickglobal/tsc-server",
  "version": "1.0.0",
  "description": "Transaction confirmation server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && find src/grpc -type f -name '*.proto' -exec cp '{}' dist/grpc ';'",
    "prepare": "npm run build",
    "start:server": "node dist/index.js",
    "dev:server": "ts-node src/index.ts",
    "dev:server:watch": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "dep": "docker-compose -f docker-compose.yml up --build -d",
    "dep:log": "docker-compose -f docker-compose.yml up --build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:brickglobal/tcs-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com:brickglobal/tcs-server/issues"
  },
  "homepage": "https://github.com:brickglobal/tcs-server/#readme",
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/ioredis": "^4.26.7",
    "@types/mongodb": "^3.6.19",
    "@types/node": "^15.12.5",
    "nodemon": "^2.0.8",
    "prettier": "^2.3.2",
    "tronweb-typings": "^1.0.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.1.0",
    "@grpc/proto-loader": "^0.5.0",
    "@sentry/node": "^6.8.0",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "ioredis": "^4.27.7",
    "kafkajs": "^1.15.0",
    "mongodb": "^3.6.9",
    "tronweb": "^4.0.0",
    "uuid": "^8.3.2"
  },
  "prettier": {
    "tabWidth": 4,
    "useTabs": true
  }
}
